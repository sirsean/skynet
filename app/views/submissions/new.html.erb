<span id="submissions-new"></span>

<%= form_for :submission, url: submissions_path, html: { id: "submission-form" } do |f| %>

  <div id="initial-container">
    <h2>Contribute to air quality analysis using only your camera.</h2>
    <% if signed_in? %>
    <p><%= link_to "Logout", destroy_user_session_path, method: :delete %></p>
    <% else %>
    <p><%= link_to "Facebook", user_omniauth_authorize_path(:facebook) %></p>
    <p><%= link_to "Twitter", user_omniauth_authorize_path(:twitter) %></p>
    <% end %>
    <div class="photo-summary-whole" >
      <div class="row no-margin photo-summary">
        <div class="col-xs-4 border-right">
          <p class="photo-summary-left">1</p>
        </div>
        <div class="col-xs-4 border-right">
          <p class="photo-summary-middle">2</p>
        </div>
        <div class="col-xs-4">
          <p class="photo-summary-right">3</p>
        </div>
      </div>
      <div class="row no-margin photo-summary">
        <div class="col-xs-4 border-right">
          <h4>Take photo of the sky</h4>
        </div>
        <div class="col-xs-4 border-right">
          <h4>Pick the best color match</h4>
        </div>
        <div class="col-xs-4">
          <h4>View aerosol analysis</h4>
        </div>
      </div>
    </div>
  </div>
  <div id="picture-container">
    <img id="show-picture" src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs%3D" class="img-responsive center-block uploaded-photo"></img>

    <div class="row no-margin">
      <div id="palette-color-0" class="palette-color col-xs-4 text-center" data-palette-index="0">
        <h2 class="palette-check glyphicon glyphicon-ok-circle"></h2>
        <!--<div class="distance"></div>-->
      </div>
      <div id="palette-color-1" class="palette-color col-xs-4 text-center" data-palette-index="1">
        <h2 class="palette-check glyphicon glyphicon-ok-circle"></h2>
        <!--<div class="distance"></div>-->
      </div>
      <div id="palette-color-2" class="palette-color col-xs-4 text-center" data-palette-index="2">
        <h2 class="palette-check glyphicon glyphicon-ok-circle"></h2>
        <!--<div class="distance"></div>-->
      </div>
    </div>
  </div>

  <%= f.hidden_field :latitude, id: "submission-latitude" %>
  <%= f.hidden_field :longitude, id: "submission-longitude" %>
  <%= f.hidden_field :blue_factor, id: "submission-blue-factor" %>

  <div class="footer">
    <div class="container row no-margin submit-row">
      <div class="col-xs-offset-2 col-xs-6">
        <div id="step-1" class="step pull-right">
          Shoot the sky
        </div>
        <div id="step-2" class="step pull-right">
          Match sky color
        </div>
        <div id="step-3" class="step pull-right">
          Send your results
        </div>
      </div>
      <div class="col-xs-4 text-center">
        <div id="camera-container">
          <span class="btn btn-default btn-file btn-lower-right">
            <%= f.file_field :photo, id: "take-picture", accept: "image/*", capture: "camera" %>
            <h2 class="glyphicon glyphicon-camera"></h2>
          </span>
        </div>
        <div id="submit-container">
          <button id="submit-button" type="submit" class="btn btn-default btn-lower-right">
            <h2 class="glyphicon glyphicon-share-alt"></h2>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
